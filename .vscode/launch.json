{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flet: Run with Hot Reload",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/Lib/site-packages/flet_cli/cli.py",
            "args": [
                "run",
                "-r",
                "${workspaceFolder}/app.py"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Flet: Run Debug",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/app.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}