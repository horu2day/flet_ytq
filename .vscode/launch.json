{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Flet: Run with Hot Reload",
      "type": "debugpy",
      "request": "launch",
      "module": "flet",
      "args": ["run", "-r", "main.py", "--name", "my_flet_app"],
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Flet: Run Debug",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/main.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "stopOnEntry": true,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    }
  ]
}
